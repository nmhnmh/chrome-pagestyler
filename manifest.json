{
  "name": "TLDP Companion",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "This extension adds code highlighting, click to copy and more styles to the www.tldp.org pages.",
  "homepage_url": "https://niminghao.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
  },
  "default_locale": "en",
  "permissions": [
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://tldp.org/LDP/*",
        "*://www.tldp.org/LDP/*",
        "*://www.tldp.org/HOWTO/*"
      ],
      "css": [
        "js/highlight/default.css",
        "js/highlight/xcode.css",
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "*://tldp.org/LDP/*",
        "*://www.tldp.org/LDP/*",
        "*://www.tldp.org/HOWTO/*"
      ],
      "js": [
        "js/highlight/highlight.pack.js",
        "js/jquery/jquery.min.js",
        "js/clipboard/clipboard.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}
